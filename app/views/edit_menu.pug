extends homepage
block content  
    .content
        h1 Menu 
        table(border=1)
            for item in menu.all_items 
                tr  
                    td #{item.item_category}
                    td #{item.item_name}
                    td #{item.item_price}
                    td 
                        a(href="/edit_item_form/" + item.item_id) Edit Item
